{
  "private": true,
  "name": "shadertoy-exporter",
  "version": "1.1.2",
  "description": "Export images and videos from Shadertoy.",
  "main": "app/main.js",
  "author": "Jonathan Giroux",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KoltesDigital/shadertoy-exporter"
  },
  "keywords": [
    "shader",
    "shadertoy"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "postinstall": "jspm install",
    "start": "electron ."
  },
  "dependencies": {
    "electron-store": "^1.2.0",
    "electron-window-state": "^4.1.1",
    "make-dir": "^1.0.0",
    "rimraf": "^2.6.1",
    "rimraf-promise": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^1.6.11",
    "electron-builder": "^19.19.1",
    "electron-store": "^1.2.0",
    "jspm": "^0.16.53",
    "quickly-copy-file": "^1.0.0"
  },
  "jspm": {
    "directories": {
      "baseURL": "app/browser"
    },
    "dependencies": {
      "angular": "github:angular/bower-angular@^1.6.5",
      "bootstrap": "github:twbs/bootstrap@4.0.0-alpha.6",
      "css": "github:systemjs/plugin-css@^0.1.35",
      "text": "github:systemjs/plugin-text@^0.0.11"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  },
  "build": {
    "appId": "digital.koltes.shadertoy-exporter",
    "artifactName": "${name}-${version}-${arch}.${ext}",
    "directories": {
      "app": "app"
    },
    "linux": {
      "icon": ".",
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "nsis": {
      "artifactName": "${name}-setup-${version}-${arch}.${ext}"
    },
    "productName": "Shadertoy Exporter",
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
